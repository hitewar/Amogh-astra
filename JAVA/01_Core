#03.FirstCode
#Code Start#
package com.dataflair.tutorials;

public class DemoTest {
	public static void main(String args[]) {
		/*static: it doesn't require method to call this object
		 * 
		 * String args:Obejct input arguments
		 */
		
		System.out.print("Hello");
		/* Here print is non-static method 
		 * but out is predefined class which is an static object 
		 */
		
	}

}
