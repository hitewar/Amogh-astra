# 04 Star Pattern
#Code Start#
     /* 
      *  * * * *
      *  * * * *
      *  * * * *
      *  * * * *
      */
		for(int i=1;i<=4;i++) {
			
			for(int j=1;j<=4;j++) {
				System.out.print("* ");
				}
			System.out.println();
			}
#Code End#

###############################
# 05 Star Pattern part 02
#Code Start#
/* 
      *  1 2 3 4
      *  2 3 4 5
      *  3 4 5 6
      *  4 5 6 7
      */
		for(int i=1;i<=4;i++) {
			
			for(int j=1;j<=4;j++) {
				// Important to put '(' & ')' otherwise it would interpret number as string  L to R
				System.out.print((i+j-1) + " ");
				}
			System.out.println();
			}
#Code End#

####################################
# 06 Star Pattern part03
#Code Start#
     /* 
      *  * * * *
      *  *     *
      *  *     *
      *  * * * *
      */
		for(int i=1;i<=4;i++) {
			
			for(int j=1;j<=4;j++) {
				if(i==1 || j==1 || i ==4 || j==4)
					System.out.print("* ");
				else
					System.out.print("  ");
					
				}
			System.out.println();
			}
#Code End#
